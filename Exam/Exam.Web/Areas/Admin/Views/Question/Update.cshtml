@model Exam.Model.Entities.Question
@{
    ViewData["Title"] = "Update";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<div class="content-body">
    <div class="row justify-content-between align-items-center mb-10">
        <div class="col-12 col-lg-auto mb-20">
            <div class="page-heading">
                <h3>Question<span>/Update</span></h3>
            </div>
        </div>
    </div>
    <div class="add-edit-product-wrap col-12">
        <div class="add-edit-product-form">
            <form asp-controller="Question" asp-action="Update" method="post">
                <input type="hidden" asp-for="ID" />
                <h4 class="title">Question</h4>
                @if (TempData["Message"] != null)
                {
                    <div class="alert alert-danger " role="alert">
                        @TempData["Message"]
                    </div>
                }
            <div class="row">
                <div class="col-lg-12 col-12 mb-30">
                    <input class="form-control" type="file" name="files" asp-for="@Model.Content">
                </div>
                <div class="col-lg-12 col-12 mb-30">
                    <label>Answer</label>
                    <select class="form-control" asp-for="Answer" asp-items="@Html.GetEnumSelectList<Answer>()">
                    </select>
                    <span asp-validation-for="Answer" class="text-danger" />
                </div>
                <div class="col-lg-12 col-12 mb-30">
                    <label>Status</label>
                    <select class="form-control" asp-for="Status" asp-items="@Html.GetEnumSelectList<Status>()">
                    </select>
                    <span asp-validation-for="Status" class="text-danger" />
                </div>
            </div>
                <div class="row">
                    <div class="d-flex flex-wrap justify-content-end col mbn-10">
                        <button class="button button-outline button-primary mb-10 ml-10 mr-0">Save</button>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>


