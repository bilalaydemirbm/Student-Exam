@model Exam.Model.Entities.Student
@{
    ViewData["Title"] = "Details";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<div class="content-body">
    <div class="row justify-content-between align-items-center mb-10">
        <div class="col-12 col-lg-auto mb-20">
            <div class="page-heading">
                <h3 class="title">Student<span>/Detail</span></h3>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-12 mb-30">
            <div class="box">
                <div class="box-head">
                    <a asp-action="Index" asp-controller="Student" class="btn btn-primary btn-sm" title="Geri">
                        <i class="fas fa-arrow-left"></i><b> Geri</b>
                    </a>
                </div>
                <div class="box-body">
                    <table class="table table-hover table-striped">
                        <tr>
                            <th>ID</th>
                            <td>@Model.ID</td>
                        </tr>
                        <tr>
                            <th>Name</th>
                            <td>@Model.Name</td>
                        </tr>
                        <tr>
                            <th>Mail</th>
                            <td>@Model.Email</td>
                        </tr>
                        <tr>
                            <th>Password</th>
                            <td>@Model.Password</td>
                        </tr>
                        <tr>
                            <th>Phone</th>
                            <td>@Model.Phone</td>
                        </tr>
                        <tr>
                            <th>Department</th>
                            <td>@Model.Department</td>
                        </tr>
                        <tr>
                            <th>Class</th>
                            <td>@Model.Class</td>
                        </tr>
                        <tr>
                            <th>Is Admin?</th>
                            <td>@Model.isAdmin</td>
                        </tr>
                        <tr>
                            <th>Status</th>
                            <td><partial name="PartialViews\_StatusPartial" model="Model.Status" /></td>
                        </tr>
                        <tr>
                            <th>Midterm Grade</th>
                            <td>@Model.MidTermGrade</td>
                        </tr>
                        <tr>
                            <th>Final Grade</th>
                            <td>@Model.FinalGrade</td>
                        </tr>
                        <tr>
                            <th>Retake Exam Grade</th>
                            <td>@Model.RetakeForFinalGrade</td>
                        </tr>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>


