@model Exam.Model.Entities.Student
@{
    ViewData["Title"] = "Update";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<div class="content-body">
    <div class="row justify-content-between align-items-center mb-10">
        <div class="col-12 col-lg-auto mb-20">
            <div class="page-heading">
                <h3>Student<span>/Update</span></h3>
            </div>
        </div>
    </div>
    <div class="add-edit-product-wrap col-12">
        <div class="add-edit-product-form">
            <form asp-controller="Student" asp-action="Update" method="post">
                <input type="hidden" asp-for="ID" />
                <h4 class="title">Student</h4>
                @if (TempData["Message"] != null)
                {
                    <div class="alert alert-danger " role="alert">
                        @TempData["Message"]
                    </div>
                }
                <div class="row">
                    <div class="col-lg-12 col-12 mb-30">
                        <input class="form-control" type="text" placeholder="Name *" asp-for="Name">
                    </div>
                    <br />
                    <div class="col-lg-12 col-12 mb-30">
                        <input class="form-control" type="text" placeholder="Email *" asp-for="Email">
                    </div>
                    <br />
                    <div class="col-lg-12 col-12 mb-30">
                        <input class="form-control" type="text" placeholder="Password *" asp-for="Password">
                    </div>
                    <br />
                    <div class="col-lg-12 col-12 mb-30">
                        <input class="form-control" type="text" placeholder="Class *" asp-for="Class">
                    </div>
                    <br />
                    <div class="col-lg-12 col-12 mb-30">
                        <input class="form-control" type="text" placeholder="Department *" asp-for="Department">
                    </div>
                    <br />
                    <div class="col-lg-12 col-12 mb-30">
                        <input class="form-control" type="text" placeholder="Phone *" asp-for="Phone">
                    </div>
                    <br />
                    <div class="col-lg-12 col-12 mb-30">
                        <input class="form-control" type="checkbox" placeholder="Is Admin? *" asp-for="isAdmin">
                    </div>
                    <br />
                    <div class="col-lg-12 col-12 mb-30">
                        <label>Status</label>
                        <select class="form-control" asp-for="Status" asp-items="@Html.GetEnumSelectList<Status>()">
                        </select>
                        <span asp-validation-for="Status" class="text-danger" />
                    </div>
                    <div class="col-lg-12 col-12 mb-30">
                        <input class="form-control" type="file" name="files" asp-for="@Model.ProfileImageURL">
                    </div>
                </div>
                <div class="row">
                    <div class="d-flex flex-wrap justify-content-end col mbn-10">
                        <button class="button button-outline button-primary mb-10 ml-10 mr-0">Save</button>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>
